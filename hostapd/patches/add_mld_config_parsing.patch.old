+		/* Transition Timeout is bits 9-11 of EML capabilities */
+		/* Value encoding: 0=128us, 1=256us, ..., 7=16384us */
+		/* BearCentral uses 8 which means 4 in the 3-bit encoding (4 = 0b100) */
+		/* But the value 8 here means index 8 in transition table, not raw bits */
+		/* For now, we'll use the raw value in bits 9-11 */
+		conf->mld_eml_capa_override &= ~0x3800;  /* Clear bits 9-11 */
+		conf->mld_eml_capa_override |= ((val & 0x7) << 9);
+		conf->mld_eml_capa_set = 1;
+		wpa_printf(MSG_DEBUG, "MLD: Transition Timeout = %d (bits 9-11 = 0x%x)", 
+			   val, (val & 0x7) << 9);
+	} else if (os_strcmp(buf, "mld_tid_to_link_negotiation") == 0) {
