    "version": "0.2.0",
    "configurations": [
        {
            "name": "clean profiles",
            "type": "python",
            "request": "launch",
            "sudo": true,
            "module": "profiler2",
            "args": [
                "--clean",
                "--files",
                "--yes"
            ]
        },
        {
            "name": "-i wlan0",
            "type": "python",
            "request": "launch",
            "sudo": true,
            "module": "profiler2",
            "args": [
                "-i",
                "wlan0",
                "--logging",
                "debug"
            ]
        },
        {
            "name": "-i wlan1",
            "type": "python",
            "request": "launch",
            "sudo": true,
            "module": "profiler2",
            "args": [
                "-i",
                "wlan1"
            ]
        },
        {
            "name": "-i wlan1 verbose",
            "type": "python",
            "request": "launch",
            "sudo": true,
            "module": "profiler2",
            "args": [
                "-i",
                "wlan1",
                "--logging",
                "debug"
            ]
        },
        {
            "name": "--pcap",
            "type": "python",
            "request": "launch",
            "sudo": true,
            "module": "profiler2",
            "args": [
                "--pcap",
                "~/dev/profiler2/tests/pcaps/iPhone11ProMax.pcap_randomized.pcap",
                "--logging",
                "debug",
                "-i",
                "wlan99",
            ]
        }
    ]
